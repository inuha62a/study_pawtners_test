<!-- 見出し -->
<h4 class="fw-bold">
  <span class="me-1">📖</span>
  <span> <%= "#{@user.name}さんの記事" %></span>
</h4>

<h1>記事一覧</h1>

<%= form_with model: @search_form, url: articles_path, method: :get, data: { turbo_frame: "articles" } do |f| %>
  <div>
    <label>キーワード</label>
    <%= f.text_field :keyword %>
  </div>
  <div>
    <label>カテゴリ</label>
    <%= f.select :category, Article.categories.keys.map { |k| [k.humanize, Article.categories[k]] }, include_blank: true %>
  </div>
  <div>
    <%= f.submit "検索" %>
  </div>
<% end %>
<div class="mb-3">
  <%= link_to "新規作成", new_article_path, class: "btn btn-primary" %>
  <%= link_to "記事一覧に戻る", articles_path %>
</div>

<turbo-frame id="articles">
  <ul>
    <% @articles.each do |article| %>
      <li>
        <%= link_to article.title, article_path(article), data: { turbo_frame: "articles" }  %>
      </li>
    <% end %>
  </ul>
</turbo-frame>