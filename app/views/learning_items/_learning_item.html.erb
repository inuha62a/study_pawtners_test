<!-- app/views/learning_items/_learning_item.html.erb -->
<turbo-frame id="<%= dom_id(learning_item) %>">
  <div>
    <strong><%= learning_item.name %></strong>
    -
    <%= learning_item.completed ? "✅ 完了" : "⏳ 未完了" %>

    <div>
      <%= button_to "切替", toggle_complete_learning_item_path(learning_item), method: :patch %>
      <%= link_to "編集", edit_learning_item_path(learning_item) %>
      <%= button_to "削除", learning_item_path(learning_item), method: :delete, data: { turbo_confirm: "削除してもよいですか？" } %>
    </div>
  </div>
</turbo-frame>