<%= turbo_stream.update "items_list_frame" do %>
  <%= render partial: "learning_items/list", locals: {
        learning_items: @learning_items,
        status: @status || "incomplete"
      } %>
<% end %>

<%= turbo_stream.replace "input_hidden_status" do %>
  <%= hidden_field_tag :status, @status, id: "input_hidden_status" %>
<% end %>